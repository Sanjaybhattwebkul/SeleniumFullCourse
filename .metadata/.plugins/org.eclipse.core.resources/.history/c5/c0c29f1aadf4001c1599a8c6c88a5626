
public class JavaBrushUp {

	public static void main(String[] args) {
		// Variable Decliration in java
		
		int a = 12;
		String name = "SANJU JI";
		Float number = (float) 2.2;
		double Num = 3.3;
		char b = 'S';
		Boolean D = true; 
		
		System.out.println("My Name Is"+name);
		System.out.println("My Number is"+number);
		System.out.println("This Is"+D);
		
		// -------  Arrays In Java --------------
		
		int[] arrayName = new int [3]; // int[3] means length of array will be 3
		
		arrayName[0]=2;
		arrayName[1]=4;
		arrayName[2]=6;
		
		System.out.println(arrayName[1]);
		
		// Second Method for Define array
		
		int[] arr = {1,2,3,4,5,6};
		// --------------- JAVA LOOPS ------------------
		
		for(int i=0; i<arr.length; i++) {
			System.out.println(arr[i]);
		}
				
		
		String[] Array = {"sanju","Abhay","Naresh"};	
		
		for(String s:Array) {
			System.out.println(Array[s]);
		}
				
		
		
		
		
	}

}
